<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.androidtown.multimemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.CAMERA" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.androidtown.multimemo.MultiMemoActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
			android:name=".MemoInsertActivity"
			android:label="@string/app_name"
			android:theme="@android:style/Theme.NoTitleBar"
			android:screenOrientation="portrait"
			>
        </activity>

        <activity
			android:name=".PhotoCaptureActivity"
			android:theme="@android:style/Theme.NoTitleBar"
			android:screenOrientation="landscape"
			>
        </activity>

        <activity
			android:name=".PhotoSelectionActivity"
			android:theme="@android:style/Theme.NoTitleBar"
			android:screenOrientation="portrait"
			>
        </activity>

		<activity
			android:name=".HandwritingMakingActivity"
			android:theme="@android:style/Theme.NoTitleBar"
			android:screenOrientation="landscape"
			>
        </activity>
        <activity
			android:name=".PenPaletteDialog"
			android:theme="@android:style/Theme.Dialog"
			android:screenOrientation="landscape"
			>
        </activity>
        <activity
			android:name=".ColorPaletteDialog"
			android:theme="@android:style/Theme.Dialog"
			android:screenOrientation="landscape"
			>
        </activity>
        
    </application>

</manifest>